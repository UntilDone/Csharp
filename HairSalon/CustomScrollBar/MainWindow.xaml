<Window x:Class="CustomScrollBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomScrollBar"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="680" 
        Width="880"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        >

    <Window.Resources>

        <ImageBrush x:Key="UpArrow_Default" 
                    ImageSource="/Assets/Up_Arrow_Default.png"/>
        <ImageBrush x:Key="DownArrow_Default" 
                    ImageSource="/Assets/Down_Arrow_Default.png"/>

        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>

            <Style.Triggers>
                <Trigger Property="Orientation"
                         Value="Vertical">
                    <Setter Property="Width"
                            Value="80"/>
                    <Setter Property="Height"
                            Value="490"/>
                    <Setter Property="Margin"
                            Value="20"/>

                    <Setter Property="Template"
                            Value="{DynamicResource VerticleScrollBar}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <ControlTemplate x:Key="VerticleScrollBar" 
                         TargetType="{x:Type ScrollBar}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="1" 
                    CornerRadius="20"
                    Margin="10"
                    Background="#E6C36A">
                </Border>
                <RepeatButton x:Name="rb_Up"
                              Focusable="False"
                              Height="80"
                              Command="ScrollBar.LineUpCommand"
                              Background="{StaticResource UpArrow_Default}"
                              Style="{StaticResource ScrollBar_UpArrow}">
                    
                </RepeatButton>
                <RepeatButton 
                              Grid.Row="2"
                              Focusable="False"
                              Height="80"
                              Command="ScrollBar.LineDownCommand"
                              Background="{StaticResource DownArrow_Default}"
                              Style="{StaticResource ScrollBar_DownArrow}">
                    
                </RepeatButton>
                <Track
                    Name="PART_TRACK"
                    Grid.Row="1"
                    IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton
                            Margin="3,2,3,2"
                            Command="ScrollBar.PageUpCommand"
                            Style="{StaticResource ScrollBar_Track}">
                        </RepeatButton>
                    </Track.DecreaseRepeatButton>

                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBar_Thumb}">
                            
                        </Thumb>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton
                            Margin="3,2,3,2"
                            Command="ScrollBar.PageDownCommand"
                            Style="{StaticResource ScrollBar_Track}">
                        </RepeatButton>
                    </Track.IncreaseRepeatButton>


                </Track>
                
            </Grid>
        </ControlTemplate>
        
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="Goldenrod">
            
        </Grid>

        <Grid Grid.Row="1"
              Background="PaleGoldenrod">

        </Grid>
        <Grid Grid.Row="2"
              Background="Goldenrod">

        </Grid>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="250"/>
                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="250"/>
                </Grid.RowDefinitions>
            </Grid>
            
        </ScrollViewer>
    </Grid>
</Window>
