<Window x:Class="ChangeButtonImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChangeButtonImage"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="400"
        Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#404751"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Button Height="150" Width="150" Grid.Row="1" Grid.Column="1" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="Assets/facebook_default.png" Stretch="None">
                    
                </ImageBrush>
            </Button.Background>
        </Button>
        <Button Height="150" Width="150" Grid.Row="1" Grid.Column="2" BorderThickness="0">

        </Button>
        <Button Height="150" Width="150" Grid.Row="1" Grid.Column="3" BorderThickness="0">

        </Button>
        <Button Height="150" Width="150" Grid.Row="1" Grid.Column="4" BorderThickness="0">

        </Button>
    </Grid>
</Window>
