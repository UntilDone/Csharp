<UserControl x:Class="InstallerWPF.InstallPathPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="설치할 폴더를 선택하세요:" FontSize="14" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox x:Name="PathTextBox" Width="350" IsReadOnly="True" Margin="0,0,10,0"/>
            <Button Content="찾아보기..." Click="BrowseButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
