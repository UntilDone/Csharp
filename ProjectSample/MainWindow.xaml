<Window x:Class="ProjectSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSample"
        mc:Ignorable="d"
        Title="Desktop App Installer" Height="400" Width="600">
    <Grid>
        <!-- 페이지가 바뀔 자리 -->
        <ContentControl x:Name="PageHost"/>

        <!-- 하단 컨트롤 영역 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="이전" Width="75" Margin="5" Click="PreviousButton_Click"/>
            <Button Content="다음" Width="75" Margin="5" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
