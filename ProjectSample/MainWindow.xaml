<Window x:Class="ProjectSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock Text="🎵 MyMusicApp 설치 마법사" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="설치할 폴더를 선택하세요:" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="InstallPathTextBox" Width="350"/>
                <Button Content="찾아보기" Width="100" Margin="10,0,0,0" Click="BrowseButton_Click"/>
            </StackPanel>
            <CheckBox x:Name="DesktopShortcutCheckBox" Content="바탕화면 바로가기 생성" IsChecked="True" Margin="0,10,0,0"/>
            <CheckBox x:Name="StartMenuShortcutCheckBox" Content="시작 메뉴 바로가기 생성" IsChecked="True"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,20,0,0"/>
            <Button Content="설치 시작" Width="150" Height="40" Margin="0,20,0,0" Click="InstallButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
